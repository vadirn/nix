{
  "env": {
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "75",
    "ENABLE_TOOL_SEARCH": "auto:5",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Skill(writing-ru)",
      "Skill(writing-en)",
      "Skill(firecrawl)",
      "Skill(playwright-cli)",
      "Skill(playground)",
      "Skill(reflect)",
      "Skill(debate)",
      "WebSearch",
      "WebFetch",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git rev-parse:*)",
      "Bash(git remote:*)",
      "Bash(git tag:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git stash:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(firecrawl *)",
      "Bash(playwright-cli *)",
      "Bash(obsidian *)",
      "Skill(obsidian-cli)"
    ],
    "deny": [
      "Read(.env*)",
      "Grep(.env)",
      "Read(**/credentials*)",
      "Bash(rm -rf:*)",
      "Bash(sudo *)",
      "Bash(chmod 777 *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(git branch -D *)",
      "Bash(git branch -D:*)",
      "Bash(obsidian eval *)",
      "Bash(obsidian delete * permanent*)",
      "Bash(obsidian plugin:install *)",
      "Bash(obsidian plugin:uninstall *)",
      "Bash(obsidian dev:cdp *)",
      "Bash(obsidian command *)",
      "Bash(obsidian history:restore *)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/sound.sh SessionStart",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/sound.sh UserPromptSubmit",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/sound.sh Stop",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/sound.sh Notification",
            "timeout": 5,
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "firecrawl@claude-plugins-official": true
  },
  "syntaxHighlightingDisabled": false,
  "alwaysThinkingEnabled": true,
  "plansDirectory": "./.claude-plans",
  "teammateMode": "tmux"
}
